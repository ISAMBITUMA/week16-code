pipeline {
    agent any
    tools {
        maven 'M2_HOME'
    }
    stages {
        stage('SonarQube Scan') {
            steps {
                script {
                    withSonarQubeEnv('sonarserver') {
                        withCredentials([string(credentialsId: 'sonar-token', variable: 'SONAR_TOKEN')]) {
                            sh 'mvn verify org.sonarsource.scanner.maven:sonar-maven-plugin:sonar -Dsonar.projectKey=ISAMBITUMA_week16-code -Dsonar.login=$SONAR_TOKEN'
                        }
                    }
                }
            }
        }
        stage('All Maven Commands') {
            steps {
                sh 'mvn clean install compile test package'
            }
        }
    }
}
